<%= simple_form_for(@booking) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
  <%= f.input :type %>
  <%= f.input :date, :as => :date   %>
  <%= f.input :time, :as => :time  %>
  <%= f.input :location %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
