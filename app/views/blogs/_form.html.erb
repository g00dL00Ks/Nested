<%= simple_form_for(@blog) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :title %>
    <%= f.input :content, as: :bootsy %>
    <%= f.input :look, as: :boolean %>
    <%= f.input :feel, as: :boolean  %>
    <%= f.input :be, as: :boolean  %>
    <%= f.input :author %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
